
<div class='all-bills'>
  <ul class='bill-list'>
  <% @all_bills.map do |bill| %>
    <li class='block-bill'>
      <% y = bill[:link].match(/bills\/(.*).json/)[1] %>
      <a href="/bills/<%= y %>"><%= bill[:number] %></a>
      <p><%= bill[:title] %></p>
    </li>
  <% end %>
  </ul>
  <nav>
    <a href="/">Home</a>
  </nav>
</div>
