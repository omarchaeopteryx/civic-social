
<div class='all-members'>
  <ul class='members-list'>
  <% @all_members.map do |member| %>
    <li class='block-member'>
      <%= y = member[:link].match(/members\/(.*).json/)[1] %>
      <a href="/members/<%= y %>"><%= member[:link] %></a>
      <p><%= member[:first_name] + " " + member[:last_name] %></p>
      <p><%= member[:party] %></p>
      <p><%= member[:state] %></p>
      <p><%= member[:next_election] %></p>
      <h3 class='twitter-handle'><a href="https://twitter.com/<%= member[:twitter_account]%> ">@<%= member[:twitter_account] %></a></h2>
    </li>
  <% end %>
  </ul>
  <nav>
    <a href="/">Home</a>
  </nav>
</div>
